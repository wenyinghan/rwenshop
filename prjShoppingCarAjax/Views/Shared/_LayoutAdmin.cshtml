<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ㄚ溫本舖</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/main.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery.form.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/main.js"></script>
</head>
<body style="font-family:Microsoft JhengHei;" class="bg">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ㄚ溫本舖-管理員專區", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="Member_head">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("產品列表", "Index", "Home")</li>
                    <li>@Html.ActionLink("新增產品", "CreateProduct", "Home")</li>
                    <li>@Html.ActionLink("查看訂單", "OrderList", "Home")</li>
                    <li>@Html.ActionLink("登出", "Logout", "Home")</li>
                    <li><a href="#">@Session["WelCome"]</a></li>
                </ul>
            </div>
        </div>
    </div>
    @if (ViewContext.RouteData.Values["action"].ToString() == "Index")
    {
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer class="footer">
                <p>&copy; @DateTime.Now.Year - ㄚ溫本舖</p>
            </footer>
        </div>
    }
    else
    {
        <div class="container body-content footer">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - ㄚ溫本舖</p>
            </footer>
        </div>
    }

    <script src="~/Scripts/main.js"></script>
</body>
</html>

