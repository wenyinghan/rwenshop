@model IEnumerable<prjShoppingCarAjax.Models.tOrderDetail>

@{
    ViewBag.Title = "會員購物車清單";

    int alltotal = 0;
}
<h2>會員購物車清單</h2>
<div class="scroll">
    <table class="table" id="shoppingcartable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fPId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fQty)
            </th>
            <th>
                總價
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td id="fUserId" name="@Html.DisplayFor(modelItem => item.fUserId)">
                    @Html.DisplayFor(modelItem => item.fUserId)
                </td>
                <td id="fPId" name="@Html.DisplayFor(modelItem => item.fPId)">
                    @Html.DisplayFor(modelItem => item.fPId)
                </td>
                <td id="fName" name="@Html.DisplayFor(modelItem => item.fName)">
                    @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td id="fPrice" name="@Html.DisplayFor(modelItem => item.fPrice)">
                    @Html.DisplayFor(modelItem => item.fPrice)
                </td>
                <td id="fQty" name="@Html.DisplayFor(modelItem => item.fQty)">
                    <input type="number" min="1" max="20" step="1" class="ChageShoppingCarfQty" value="@Html.DisplayFor(modelItem => item.fQty)" required>
                </td>
                <td>
                    @{
                        int Qty = int.Parse(Html.DisplayFor(modelItem => item.fQty).ToString());
                        int Price = int.Parse(Html.DisplayFor(modelItem => item.fPrice).ToString());
                        string total = (Qty * Price).ToString();
                        alltotal += (Qty * Price);
                    }
                    @total
                </td>
                <td>
                    <div class="btn btn-primary deleteShoppingCarbyView">刪除購物車</div>
                </td>
            </tr>
        }

    </table>


</div>

@Html.Raw(Session["StockShort"])  
<h2 id="alltotal">總金額：@alltotal.ToString()</h2>
<form action="@Url.Action("ShoppingCar")" method="post">
    <div class="form-horizontal">
        <h4>填寫訂單收件人資料</h4>
        <hr />

        <div class="form-group">
            <span class="control-label col-md-2">收件人姓名</span>
            <div class="col-md-10">
                <input maxlength="20" type="text" id="fReceiver" name="fReceiver" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">收件人信箱</span>
            <div class="col-md-10">
                <input maxlength="40" type="email" id="fEmail" name="fEmail" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">收件人地址</span>
            <div class="col-md-10">
                <input maxlength="40" type="text" id="fAddress" name="fAddress" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="OrderShoppingCar" disabled="disabled" value="確認訂購" class="btn btn-default" onclick="if (confirm('確定下單嗎？')==false) {return false;}" />
            </div>
        </div>

    </div>
</form>
